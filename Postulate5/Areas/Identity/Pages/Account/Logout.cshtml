@page
@model LogoutModel
@{
    ViewData["Title"] = "¿Quiere salir de postulate?";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Login", new { area = "Identity" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Salir de Postulate.Com</button>
            </form>
        }
        else
        {
            <p>Has cerrado sesión correctamente de la aplicación.</p>
        }
    }
</header>
